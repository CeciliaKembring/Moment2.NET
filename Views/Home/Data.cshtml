@model Moment2NET.Models.DataModel;
@{
 ViewData["title"] = "Data"; 
}
<h2>Utflyktsmål</h2>
<p>Lägg till ett utflyktsmål</p>


<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    
    <div class="inputs">
        <span asp-validation-for="Name" class="error"></span><br>
        <label asp-for="Name"></label><br>
        <input asp-for="Name" class="input"><br>
    </div>

    <div class="inputs">
        <span asp-validation-for="Address" class="error"></span><br>
        <label asp-for="Address"></label><br>
        <input asp-for="Address" class="input"><br>
    </div>

 <div class="inputs">
        <label asp-for="Category"></label><br>
        <select asp-for="Category" class="input">
            <option value="Natur">Natur</option>
            <option value="Stad">Stad</option>
            <option value="Strand">Strand</option>
        </select>
    </div>

<div class="inputs">
    <label asp-for="Visited"></label><br>
    <input type="radio" id="visitedYes" name="Visited" value="true">
    <label for="visitedYes" class="radio-label">Ja</label>
    <input type="radio" id="visitedNo" name="Visited" value="false">
    <label for="visitedNo" class="radio-label">Nej</label>
</div>

    <input type="submit" class="btn" value="Lägg till utflyktsmål">

</form>